{
  "name": "retrospective-vsts-extension",
  "version": "1.0.0",
  "description": "Azure DevOps Retrospective Extension",
  "main": "index.tsx",
  "scripts": {
    "test": "jest --env=jsdom --silent -ci --reporters=default --reporters=jest-junit --coverage",
    "test:fuzz": "jest --env=jsdom --testMatch='**/*.fuzz.test.{ts,tsx}' --verbose",
    "build": "npm run clean && npm run compile && npx webpack --mode=production",
    "check": "npm run ncu && npm run format && cd ../../ && pre-commit run --all-files && cd - && npm run test",
    "clean": "npx rimraf ./dist ./coverage ./reports",
    "compile": "npx postcss ./src/index.css -o ./src/bundle.css --config ./postcss.config.js --no-map",
    "format": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "ncu": "npx npm-check-updates",
    "pack:d": "npm run build && npx tfx extension create --manifests vss-extension-dev.json --rev-version --output-path ./dist/",
    "pack:p": "npm run build && npx tfx extension create --manifests vss-extension-prod.json --rev-version --output-path ./dist/",
    "publish:d": "npm run pack:d && npx tfx extension publish --manifests vss-extension-dev.json --vsix ./dist/*.vsix --token ${AZURE_DEVOPS_TOKEN}",
    "publish:p": "npm run pack:p && npx tfx extension publish --manifests vss-extension-prod.json --vsix ./dist/*.vsix --token ${AZURE_DEVOPS_TOKEN}",
    "stats": "CODECOV_TOKEN= npx webpack --mode=production --profile --json > stats.json && npx webpack-bundle-analyzer stats.json dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vsts-extension-retrospectives"
  },
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "@fluentui/react": "8.125.4",
    "@microsoft/applicationinsights-react-js": "19.3.8",
    "@microsoft/applicationinsights-web": "3.3.11",
    "@microsoft/signalr": "10.0.0",
    "azure-devops-extension-api": "1.152.0",
    "azure-devops-extension-sdk": "2.0.11",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@codecov/webpack-plugin": "1.9.1",
    "@tailwindcss/postcss": "4.2.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "compression-webpack-plugin": "11.1.0",
    "css-loader": "7.1.4",
    "cssnano": "7.1.2",
    "fast-check": "4.5.3",
    "globals": "17.3.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-junit": "16.0.0",
    "markdownlint-cli2": "0.21.0",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "prettier": "3.8.1",
    "process": "0.11.10",
    "rimraf": "6.1.3",
    "style-loader": "4.0.0",
    "tailwindcss": "4.2.1",
    "tfx-cli": "0.23.1",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "webpack": "5.105.2",
    "webpack-bundle-analyzer": "5.2.0",
    "webpack-cli": "6.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./components/__tests__/setupTests.tsx"
    ],
    "transform": {
      ".+\\.(js|ts|tsx|jsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(azure-devops-ui|azure-devops-extension-sdk|azure-devops-extension-api)/)"
    ],
    "setupFiles": [
      "./components/__tests__/setupTests.tsx"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleNameMapper": {
      ".+\\.(css|less)$": "<rootDir>/components/__mocks__/cssTestStub.tsx"
    },
    "preset": "ts-jest/presets/js-with-babel",
    "resetMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "cobertura",
      "text"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
