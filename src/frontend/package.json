{
  "name": "retrospective-vsts-extension",
  "version": "1.0.0",
  "description": "Azure DevOps Retrospective Extension",
  "main": "index.tsx",
  "scripts": {
    "clean": "npx rimraf ./dist ./coverage ./reports && npx del-cli ./node_modules/applicationinsights-js/dist/*.map",
    "compile": "npx postcss ./css/index.css -o ./css/bundle.css --config ./postcss.config.js --no-map",
    "build": "npm run clean && npm run compile && npx webpack --mode=production",
    "format": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "lint": "npx eslint **/*.ts*",
    "lint:fix": "npx eslint **/*.ts* --fix",
    "pack:d": "npm run build && npx tfx extension create --manifests vss-extension-dev.json --rev-version --output-path ./dist/",
    "pack:p": "npm run build && npx tfx extension create --manifests vss-extension-prod.json --rev-version --output-path ./dist/",
    "publish:d": "npm run pack:d && npx tfx extension publish --manifests vss-extension-dev.json --vsix ./dist/*.vsix",
    "publish:p": "npm run pack:p && npx tfx extension publish --manifests vss-extension-prod.json --vsix ./dist/*.vsix",
    "test": "jest --env=jsdom --silent -ci --reporters=default --reporters=jest-junit --coverage",
    "ncu": "npx npm-check-updates",
    "ncu:u": "npx npm-check-updates --update-dependencies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vsts-extension-retrospectives"
  },
  "author": "Microsoft",
  "license": "ISC",
  "dependencies": {
    "@fluentui/react": "8.123.4",
    "@microsoft/applicationinsights-react-js": "18.3.6",
    "@microsoft/applicationinsights-web": "3.3.6",
    "@microsoft/signalr": "8.0.7",
    "@tanstack/react-table": "8.21.3",
    "azure-devops-extension-api": "1.152.0",
    "azure-devops-extension-sdk": "2.0.11",
    "classnames": "2.5.1",
    "copy-to-clipboard": "3.3.3",
    "file-saver": "2.0.5",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit-reporter": "1.1.0",
    "markdownlint-cli2": "0.14.0",
    "moment": "2.30.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-markdown": "10.1.0",
    "react-slick": "0.30.2",
    "react-toastify": "9.0.7",
    "slick-carousel": "1.8.1",
    "telemetryclient-team-services-extension": "1.0.10"
  },
  "devDependencies": {
    "@codecov/webpack-plugin": "1.9.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.20.0",
    "@tailwindcss/postcss": "4.1.11",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/classnames": "2.3.4",
    "@types/enzyme": "3.10.12",
    "@types/file-saver": "2.0.7",
    "@types/jest": "30.0.0",
    "@types/jsdom": "21.1.7",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.13.1",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.6",
    "@types/react-slick": "0.23.13",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "cheerio": "1.1.0",
    "compression-webpack-plugin": "11.1.0",
    "crypto-browserify": "3.12.1",
    "css-loader": "7.1.2",
    "cssnano": "7.1.0",
    "del-cli": "6.0.0",
    "eslint": "9.25.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-webpack-plugin": "5.0.0",
    "file-loader": "6.2.0",
    "globals": "16.0.0",
    "history": "5.3.0",
    "jest": "30.0.5",
    "jest-junit": "16.0.0",
    "moment-locales-webpack-plugin": "1.2.0",
    "node-jq": "6.0.1",
    "postcss": "8.5.4",
    "postcss-cli": "11.0.1",
    "prettier": "3.6.0",
    "process": "0.11.10",
    "rimraf": "6.0.1",
    "sass": "1.89.2",
    "sass-loader": "16.0.5",
    "stream-browserify": "3.0.0",
    "style-loader": "4.0.0",
    "tailwindcss": "4.1.12",
    "tfx-cli": "0.21.3",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.4",
    "typescript": "5.7.3",
    "url-loader": "4.1.1",
    "util": "0.12.5",
    "webpack": "5.96.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "overrides": {
    "cross-spawn": "7.0.6",
    "execa": "9.5.2",
    "clipboardy": "4.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./components/__tests__/setupTests.tsx",
      "./components/__tests__/enzymeMocks.ts"
    ],
    "transform": {
      ".+\\.(js|ts|tsx|jsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(azure-devops-ui|azure-devops-extension-sdk|azure-devops-extension-api)/)",
      "components/__mocks__/cheerio\\.js$",
      "components/__mocks__/cheerio-utils\\.js$"
    ],
    "setupFiles": [
      "./components/__tests__/setupTests.tsx"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleNameMapper": {
      ".+\\.(css|less)$": "<rootDir>/components/__mocks__/cssTestStub.tsx",
      "^enzyme$": "<rootDir>/components/__tests__/enzymeMocks.ts",
      "^enzyme-to-json$": "<rootDir>/components/__tests__/enzymeMocks.ts",
      "^office-ui-fabric-react/lib/(.*)$": "@fluentui/react/lib/$1",
      "^office-ui-fabric-react$": "@fluentui/react",
      "^office-ui-fabric-react/lib/Button$": "@fluentui/react/lib/Button",
      "^office-ui-fabric-react/lib/Dialog$": "@fluentui/react/lib/Dialog",
      "^office-ui-fabric-react/lib/DocumentCard$": "@fluentui/react/lib/DocumentCard",
      "^office-ui-fabric-react/lib/DetailsList$": "@fluentui/react/lib/DetailsList",
      "^office-ui-fabric-react/lib/Image$": "@fluentui/react/lib/Image",
      "^office-ui-fabric-react/lib/Tooltip$": "@fluentui/react/lib/Tooltip",
      "^cheerio$": "<rootDir>/components/__mocks__/cheerio.js",
      "^cheerio/lib/utils$": "<rootDir>/components/__mocks__/cheerio-utils.js"
    },
    "preset": "ts-jest/presets/js-with-babel",
    "resetMocks": true,
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "cobertura",
      "text"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
