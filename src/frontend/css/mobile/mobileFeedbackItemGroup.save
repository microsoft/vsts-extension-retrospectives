@use "../_variables.scss" as variables;

// Universal mobile styles for all feedback items (grouped and ungrouped)
.feedbackItem,
.feedback-item-group {
  flex-basis: 100%;

  .mainItemCard {
    min-width: calc(100vw - 45px);
    max-width: calc(100vw - 45px);
    border: none;
    background: #fff;
    box-shadow: none;
    padding: 12px 8px;
    font-size: variables.$mobile_font_size_main;

    // Only hide unwanted elements, NOT the whole header!
    .item-actions-menu,
    .card-action-timer,
    .group-child-feedback-stack,
    .ms-DocumentCardActivity,
    .anonymous-created-date {
      display: none !important;
    }

    // Card header: Keep visible for expand/collapse/group count.
    .card-header {
      // Optionally, you can further target what to hide/show inside here.
      .feedback-expand-group,
      .grouped-count-label {
        display: flex;
        font-size: 1em;
        color: #444;
        align-items: center;
        // Add your desired spacing/styling here.
      }
      // If there are sub-elements you want hidden, add them by class here.
    }

    .card-content {
      font-size: variables.$mobile_font_size;
      // padding: 0;
      // margin: 0;
    }

    .card-id {
      font-size: variables.$mobile_font_size_main;
    }
  }
}
